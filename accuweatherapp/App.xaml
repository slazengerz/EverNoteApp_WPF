<Application x:Class="AccuWeatherApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AccuWeatherApp"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="display">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="DarkGray"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,7,0,7"/>
            <Setter Property="RenderTransformOrigin" Value="0.641,0.696"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>
