<UserControl x:Class="EverNoteLatest.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EverNoteLatest.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10" Orientation="Horizontal"
                    Grid.Row="0">
            <TextBlock FontSize="15">
                <Run x:Name="noteTitleText"/>
            </TextBlock>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Vertical"
                    Grid.Row="1">
            <TextBlock x:Name="noteContentText"
                       TextWrapping="Wrap"
                       FontSize="10"/>
            <TextBlock x:Name="noteDateCreatedText"
                       FontSize="10"/>
            <TextBlock x:Name="noteDateUpdatedText"
                       FontSize="10"/>

        </StackPanel>
    </Grid>
</UserControl>
